{
  "name": "cogniwars",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint --max-warnings=0 src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|css|md)\"",
    "test": "npx cypress run-ct",
    "test:open": "npx cypress open-ct",
    "test:unit": "jest",
    "emulators": "firebase emulators:start",
    "test:emulate": "cross-env FIREBASE_AUTH_EMULATOR_HOST=\"localhost:9099\" FIREBASE_DATABASE_EMULATOR_HOST=\"localhost:9000\" FIRESTORE_EMULATOR_HOST=\"localhost:8081\" yarn test",
    "test:emulate-open": "cross-env FIREBASE_AUTH_EMULATOR_HOST=\"localhost:9099\" FIREBASE_DATABASE_EMULATOR_HOST=\"localhost:9000\" FIRESTORE_EMULATOR_HOST=\"localhost:8081\" yarn test:open",
    "coverage:integration": "npx nyc report --reporter=text-summary",
    "coverage:unit": "jest --coverage"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.6.2",
    "@mui/material": "^5.6.3",
    "@paypal/react-paypal-js": "^7.6.0",
    "@reduxjs/toolkit": "^1.8.1",
    "@types/enzyme": "^3.10.12",
    "animejs": "^3.2.1",
    "babel-jest": "^27.4.4",
    "enzyme": "^3.11.0",
    "firebase": "^8.10.0",
    "firebase-admin": "^10.1.0",
    "formik": "^2.2.9",
    "lodash": "^4.17.21",
    "material-ui-confirm": "^3.0.4",
    "moment": "^2.29.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-intl": "^6.0.4",
    "react-redux": "^8.0.1",
    "react-router-dom": "^6.3.0",
    "react-with-firebase-auth": "^1.4.1",
    "redux-thunk": "^2.4.1",
    "styled-components": "^5.3.5",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.9.12",
    "@cypress/react": "^5.12.5",
    "@cypress/vite-dev-server": "^2.2.3",
    "@types/animejs": "^3.1.4",
    "@types/eslint": "^8.4.2",
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.34",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^1.3.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.7",
    "cross-env": "^7.0.3",
    "cypress": "^9.6.1",
    "cypress-firebase": "^2.2.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^27.4.4",
    "jest-circus": "^27.4.4",
    "jest-resolve": "^27.4.4",
    "jest-scss-transform": "^1.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.1",
    "tsc-files": "^1.1.3",
    "typescript": "^4.6.4",
    "vite": "^2.9.5",
    "vite-plugin-eslint": "^1.6.1",
    "vite-plugin-istanbul": "^2.7.3",
    "vite-plugin-pwa": "^0.12.0"
  },
  "lint-staged": "lint-staged --config lint-staged.ts",
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest/mocks/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/jest/mocks/cssMock.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "react-app"
        ]
      }
    }
  }
}
